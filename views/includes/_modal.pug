// Modal
#reportModal.rn-popup-modal.report-modal-wrapper.modal.fade(tabindex='-1' aria-hidden='true')
  button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
    i(data-feather='x')
  .modal-dialog.modal-dialog-centered.modal-dialog-scrollable
    .modal-content.report-content-wrapper
      .modal-header.report-modal-header
        h5.modal-title
          | Why are you reporting?
      .modal-body
        p Describe why you think this item should be removed from marketplace
        .report-form-box
          h6.title Message
          textarea(name='message' placeholder='Write issues')
          .report-button
            button.btn.btn-primary.mr--10.w-auto(type='button') Report
            button.btn.btn-primary-alta.w-auto(type='button' data-bs-dismiss='modal') Cancel
