doctype html

mixin nftImg(ipfs)
  img(src=ipfs.replace('ipfs://', 'https://loopring.mypinata.cloud/ipfs/'), loading="lazy")

mixin nftImgFromMetadata(ipfs)
  img(
    src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7"
    data-meta=ipfs.replace('ipfs://', 'https://loopring.mypinata.cloud/ipfs/'), loading="lazy"
  )

mixin log(obj)
  script
    | console.log(!{JSON.stringify(obj)});

